<h1>Login</h1>

<%= form_with model: User.new, 
	local: true, url: sessions_path do |f| %>

	<div class='field'>
        <%= f.label :username %> <br> 
        <%= f.text_field :login %>
    </div>
	<div class= 'field'>
        <%= f.label :password %> <br> 
        <%= f.password_field :password %>
    </div>
	<div class= 'actions'>
        <%= f.submit "Login" %> 
    </div>

<%end%>
