<h1>Todo Lists</h1>

<% @todo_lists.each do |todo_list| %>
    <div class= "todo-list">
        <%- if todo_list.todo_items.count == 0 || todo_list.todo_items.map(&:done).include?(true)%>
            <%- class_name = "green" %>
        <%- else %>
            <%- class_name = "red" %>
        <% end %>
        <span class = "<%= class_name %>" > 
            <%= todo_list.list_due_date %>
        </span>
        <%= link_to "#{todo_list.list__name}", todo_list %>
    </div>
 <% end %>


<br>

<%= will_paginate @todo_lists %>

<br>

<%= link_to 'New Todo List', new_todo_list_path %>